{
  "name": "automation_checkone-",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
  
    "test:smoke": "npx cypress run --expose grep='smoke',grepFilterSpecs=true --browser chrome --headless --record --parallel --ci-build-id $GITHUB_RUN_ID",
    "test:smoke:firefox": "npx cypress run --expose grep='smoke',grepFilterSpecs=true --browser firefox --headless --record --parallel --ci-build-id $GITHUB_RUN_ID",
    "test:smoke:prod": "npx cypress run grep=regression+-not-prod --browser chrome --headless --record --parallel  --ci-build-id $GITHUB_RUN_ID",


    "test:regression:chunk1": "npx cypress run --expose grep='regression',grepFilterSpecs=true --browser chrome --headless --record --parallel --ci-build-id $GITHUB_RUN_ID",
    "test:regression:chunk2": "npx cypress run --expose grep='regression',grepFilterSpecs=true --browser chrome --headless --record --parallel --ci-build-id $GITHUB_RUN_ID",
    "test:regression:chunk3": "npx cypress run --expose grep='regression',grepFilterSpecs=true --browser chrome --headless --record --parallel --ci-build-id $GITHUB_RUN_ID",

    "test:regression:chunk1:firefox": "npx cypress run --expose grep='regression',grepFilterSpecs=true --browser firefox --headless --record --parallel  --ci-build-id $GITHUB_RUN_ID",
    "test:regression:chunk2:firefox": "npx cypress run  --expose grep='regression',grepFilterSpecs=true --browser firefox --headless --record --parallel --ci-build-id $GITHUB_RUN_ID",
    "test:regression:chunk3:firefox": "npx cypress run  --expose grep='regression',grepFilterSpecs=true --browser firefox --headless --record --parallel --ci-build-id $GITHUB_RUN_ID",

    "test:retest": "npx cypress run  --expose grep='retest',grepFilterSpecs=true --browser chrome --headless --record --parallel --ci-build-id $GITHUB_RUN_ID",

    "simple-run": "npx cypress run --spec cypress/e2e/regression/chunk-1",
    "junit-merge": "npx junit-merge -d cypress/results/junit/results -o cypress/results/junit/results.xml",
    "delete-junit-report": "rm -rf cypress/results/junit/results.xml",

    "delete-results": "rm -rf cypress/results/* || true",
    "mochaweome-merge": "npx mochawesome-merge cypress/results/mochawesome/*.json > mochawesome.json && npx marge mochawesome.json",
    "delete-mocha-report": "rm -rf mochawesome-report/* || true",
    "cypress-regression-pack": " npm run delete-results  && npm run delete-mocha-report && npm run simple-run && npm run mochaweome-merge"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cypress/grep": "^6.0.0",
    "cypress": "^15.10.0",
    "cypress-multi-reporters": "^2.0.5",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.1",
    "mochawesome-report-generator": "^6.3.2"
  }
}
